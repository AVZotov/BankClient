<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:BankClientUI.ViewModels"
             x:DataType="viewmodel:ClientsViewModel"
             x:Class="BankClientUI.Views.ClientsPage"
             Title="{Binding Title}">
    <Grid ColumnDefinitions="Auto, *" RowDefinitions="*, Auto">
        <Frame BackgroundColor="LightGray" BorderColor="Black"
               CornerRadius="5" Margin="5">
            <CollectionView Grid.Row="0" Grid.Column="0" 
                            Background="Transparent" ItemsSource="{Binding Clients}"
                            SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="viewmodel:ClientDetailsViewModel">
                        <Grid Padding="3">
                            <Frame Style="{StaticResource CardView}">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding Source={RelativeSource AncestorType= {x:Type viewmodel:ClientsViewModel}},
                                        Path=ShowDetailsCommand}" CommandParameter="{Binding .}" />
                                </Frame.GestureRecognizers>
                                <Grid RowDefinitions="*, Auto">
                                    <HorizontalStackLayout Grid.Row="0" Background="Pink">
                                        <Label Text="{Binding LastName}" FontSize="Medium" Margin="0,0,5,0"/>
                                        <Label Text="{Binding FirstName}" FontSize="Medium"/>
                                    </HorizontalStackLayout>
                                    
                                    <HorizontalStackLayout Grid.Row="1">
                                        <Label Text="{Binding Created}" FontSize="Micro" Margin="0,0,5,0"/>
                                        <Label Text="{Binding Updated}" FontSize="Micro"/>
                                    </HorizontalStackLayout>
                                </Grid>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Frame>

    </Grid>
</ContentPage>